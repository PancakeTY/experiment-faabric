apiVersion: apps/v1
kind: Deployment
metadata:
  name: faasm-openmpi-deployment
  namespace: {{ native_mpi_namespace }}
spec:
  selector:
    matchLabels:
      run: faasm-openmpi
  replicas: 2
  template:
    metadata:
      name: mpi-worker
      labels:
        run: faasm-openmpi
    spec:
      containers:
        - name: mpi-worker
          image: {{ native_mpi_image }}
          imagePullPolicy: Always
      affinity:
        podAntiAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 100
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: run
                  operator: In
                  values:
                  - faasm-openmpi
              topologyKey: kubernetes.io/hostname

