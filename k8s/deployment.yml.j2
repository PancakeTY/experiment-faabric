apiVersion: apps/v1
kind: Deployment
metadata:
  name: faasm-openmpi-deployment
  namespace: {{ native_mpi_namespace }}
spec:
  selector:
    matchLabels:
      run: faasm-openmpi
  replicas: 2
  template:
    metadata:
      name: mpi-worker
      labels:
        run: faasm-openmpi
    spec:
      containers:
        - name: mpi-worker
          image: {{ native_mpi_image }}
      affinity:
        podAntiAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 100
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: run
                  operator: In
                  values:
                  - faasm-openmpi
              topologyKey: kubernetes.io/hostname

---

apiVersion: v1
kind: Pod
metadata:
  name: hoststats-proxy
  namespace: {{ native_mpi_namespace }}
  labels:
    app: hoststats-proxy
spec:
  containers:
    - name: hoststats-proxy
      image: shillaker/hoststats:0.0.7
      ports:
        - containerPort: 5000

---

apiVersion: v1
kind: Service
metadata:
  name: hoststats-proxy
  namespace: {{ native_mpi_namespace }}
spec:
  selector:
    app: hoststats-proxy
  type: NodePort
  ports:
    - port: 5000
      targetPort: 5000
